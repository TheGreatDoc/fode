	if(!valid(cr3)) return;
	GameVar @quest_ending=GetLocalVar(LVAR_quest_the_little_tom,cr3.Id);
	GameVar @quest_progress=GetLocalVar(LVAR_quest_the_little_tom_progress,cr.Id);
	quest_ending=8;
